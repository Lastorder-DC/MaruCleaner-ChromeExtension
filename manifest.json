{
    "manifest_version": 2,
    "name": "마루마루 클리너",
    "version": "0.82",
    "description": "마루마루를 클린하게 만들어 줍니다.",
	
	"icons" : {
		"32" : "./maru.png",
		"64" : "./maru.png",
		"128" : "./maru.png"
	},
	
	"browser_action": {
        "default_icon" : "./maru.png",
		"default_popup":"./popup.html",
		"32" : "./maru.png",
		"64" : "./maru.png",
		"128" : "./maru.png"
	},
	
	"content_scripts":[
		{
			"matches": ["http://wasabisyrup.com/archives/*"],
			"js":["./ext/jquery.min.js","./ext/index.min.js"],
			"css":["./ext/css/tisbe.css","./ext/css/style.css"],
			"run_at": "document_start"
		},
		
		{
			"matches": ["http://marumaru.in/*"],
			"js":["./ext/jquery.min.js","./ext/maru.min.js"],
			"css":["./ext/css/maru.css"],
			"run_at": "document_start"
		}
	],
	
    "permissions": [
		"activeTab",
		"storage",
        "http://wasabisyrup.com/archives/*",
        "http://marumaru.in/*"
    ]
	
}